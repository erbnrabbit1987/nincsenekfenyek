# ===========================================
# Nincsenek Fények! - Environment Variables
# ===========================================
# Másold ezt a fájlt .env-re és módosítsd a szükséges értékeket!
# cp .env.example .env
# nano .env

# ===========================================
# Alkalmazás Beállítások
# ===========================================

APP_NAME=Nincsenek Fények!
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-in-production-generate-strong-secret-key-here

# ===========================================
# API Beállítások
# ===========================================

API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# MongoDB Beállítások
# ===========================================

MONGODB_URL=mongodb://mongodb:27017/nincsenekfenyek
MONGODB_DB_NAME=nincsenekfenyek

# ===========================================
# PostgreSQL Beállítások
# ===========================================

POSTGRES_DB=nincsenekfenyek
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRESQL_URL=postgresql://postgres:postgres@postgres:5432/nincsenekfenyek

# ===========================================
# Redis Beállítások
# ===========================================

REDIS_URL=redis://redis:6379/0

# ===========================================
# Celery Beállítások
# ===========================================

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Logging Beállítások
# ===========================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
